@{
    ViewBag.Title = "ValueAddedServises";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/JavaScript.js"></script>
<link href="~/Content/StyleSheet1.css" rel="stylesheet" />

@*###############################################################*@

<div id="content">

    <h3 style="text-align:center ; font-weight:bold">نمودج اتفاق التعرفة والخدمات المضافة للرسائل النصية القصيرة</h3>
    <div class="col-md-8 col-lg-offset-2">
        <div class="jumbotron">
            <div class="container ">

                <form>

                    <div class="col-md-4 col-xs-4 col-md-offset-2 col-xs-offset-2">

                        <label for="usr">إسم الشركة المقدمة للخدمة </label>
                        <input type="text" class="form-control" id="usr" placeholder="إسم الشركة المقدمة للخدمة">
                    </div>

                    <div class="col-md-4 col-xs-4">
                        <label for="usr">رقم الترخيص</label>
                        <input type="text" class="form-control" id="usr" placeholder="رقم الترخيص">
                    </div>

                    @*##########################################################*@

                    <div class="col-md-4 col-xs-4 col-md-offset-2 col-xs-offset-2">

                        <label for="usr">رقم الهاتف</label>
                        <input type="text" onkeypress="return ValidateNumber(event)" class="form-control"
                               placeholder="أدخل رقم الهاتف " style="white-space: normal;" maxlength="10" pattern="\d{10}" required />
                    </div>

                    <div class="col-md-4 col-xs-4">

                        <label for="email">عنوان البريد الالكروني</label>
                        <input type="email" class="form-control" id="usr" placeholder="example@cim.ly">
                    </div>

                    @*#######################################*@

                    <div class="form-group row">
                        <div class="col-md-8 col-xs-7 col-md-offset-3 col-xs-offset-3">
                            <hr />
                            <h3 style="font-weight:bold">وصف الخدمة</h3>

                            <label for="usr" class="col-md-3  col-form-label">إسم الخدمة</label>
                            <div class="col-md-7">
                                <input type="text" class="form-control"  placeholder="أدخل اسم الخدمة">
                            </div>
                            <div class="col-md-12 col-xs-12"></div>
                            <div class="col-md-12 col-xs-12 "></div>
                            <label for="usr" class="col-md-3  col-form-label">رقم الخدمة المطلوبة</label>
                            <div class="col-md-7 ">
                                <input type="number" class="form-control" id="usr" placeholder="الرقم الخدمة المطلوبة">
                            </div>
                        </div>
                    </div>

                    @*#############################################333*@
                    <div class="row">
                        <div class="col-md-6 col-xs-6  col-md-offset-3  col-xs-offset-3">
                            <hr />
                                <h3 style="font-weight:bold">متوسط مدة تحديث البيانات</h3>
                            <div class="form-group shown" id="form2">
                                <select class="selectpicker form-control" style="font-weight:600">
                                    <option> تحديث يومي</option>
                                    <option> تحديث أسبوعي</option>
                                    <option> تحديث شهري</option>
                                    <option> تحديث سنوي كحد أقصي</option>
                                    <option> هده الخدمة لاتحتاج إلى تحديث</option>
                                </select>
                            </div>

                            <label class="form-check-label">
                                <input class="form-check-input " type="checkbox" id="S1" value="" name="inlineRadioOptions">  الخدمة مؤقتة في مدة أقصها
                            </label>

                            <input id="form1" type="text" class="form-control" placeholder="أقصي مدة لتحديث البيانات">
                        </div>

                        <br /><br />
                        <div class="col-md-12"></div>
                        <div class="col-md-6 col-xs-12 col-md-offset-3  ">

                            <label for="comment">ملاحظات</label>
                            <textarea class="form-control" rows="5" id="comment"></textarea>
                        </div>
                    </div>

                    @*##############################################*@
                    <div class="form-check form-check-inline">
                        <div class="col-md-7 col-xs-9 col-md-offset-3 col-xs-offset-2">
                            <hr />
                            <h3 style="font-weight:bold">تصنيف الخدمة</h3>
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" name="inlineRadioOptions" id="inlineRadio1" value="option1"> إسلامي
                            </label>
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" name="inlineRadioOptions" id="inlineRadio2" value="option2"> ثقافية
                            </label>
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" name="inlineRadioOptions" id="inlineRadio2" value="option2"> رياضية
                            </label>
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" name="inlineRadioOptions" id="inlineRadio1" value="option1"> منوعات وترفيه
                            </label>
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" name="inlineRadioOptions" id="inlineRadio2" value="option2"> إجتماعية
                            </label>
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" name="inlineRadioOptions" id="inlineRadio2" value="option2"> تصنيف اخر
                            </label>
                        </div>
                    </div>

                    @*####################################################################33*@

                    <div class="form-check form-check-inline">
                        <div class="row">
                            <div class="col-md-3 col-xs-4  col-md-offset-4 col-xs-offset-4">
                                <hr />
                                <div class="form-group">
                                    <h3 style="text-align:center;font-weight:bold">مدة الخدمة</h3>
                                    <select class="selectpicker form-control " style="font-weight:600">
                                        <option>3 أشهر</option>

                                        <option> سنة</option>
                                    </select>
                                </div>

                                <input type="text" class="form-control" id="usr" placeholder="السعر بالدراهم">
                            </div>
                        </div>
                    </div>
                    @*###########################################################################*@

                    <div class="col-md-5 col-md-offset-1 ">
                        <hr />
                        <label for="comment">شرح تفصيلي عن كيفية عمل الخدمة:</label>
                        <textarea class="form-control" rows="5" id="comment"></textarea>
                    </div>
                    @*#################################################################*@

                    <div class="col-md-6 ">
                        <hr />
                        <label for="comment">صيغة رسالة(SMS) الدعائية الي سيتم إرسالها للمشتركين</label>
                        <textarea class="form-control" rows="5" id="comment"></textarea>
                    </div>

                        @*#################################################################*@

                        <div class="col-md-6 col-md-offset-1">
                            <br />

                            <button type="button" class="btn btn-success hidden-print" onclick="myFunction()">طباعة الصفحة</button>

                            <script>
                                function myFunction() {
                                    window.print();
                                };
                            </script>
                        </div>
                        <script>
                                $(document).ready(function () {
                                    $("#form1").hide();
                                    $("#S1").click(function () {
                                        if ($("#form2").hasClass("shown")) {
                                            $("#form2").hide("slow");
                                            $("#form1").show("slow");
                                            $("#form2").removeClass("shown");
                                        }
                                        else {
                                            $("#form1").hide("slow");
                                            $("#form2").show("slow");
                                            $("#form2").addClass("shown");
                                        }

                                    });
                                });
                        </script>
</form>
            </div>
        </div>
        <br /><br /><br /><br />
    </div>
</div>