@using WebApplExcelReader.Models;

@using PagedList;
@using PagedList.Mvc;

@model IPagedList<WebApplExcelReader.Models.EquipmentsInfo>

<!-- Latest compiled and minified CSS -->
<link href="~/Content/StyleSheet1.css" rel="stylesheet" />
